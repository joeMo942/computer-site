
#include<iostream>
#include<fstream>
#include<string>

using namespace std;

#define name_file  "data_siup_loin/"
#define name_file_cart  "data_cart/"

const int cpusize = 10;
const int Gpusize = 10;
const int ramsize = 10;
const int psusize = 10;
const int casesize = 10;
const int mobosize = 10;
const int storunsize = 10;

